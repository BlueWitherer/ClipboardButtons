{
    "geode": "4.10.0",
    "gd": {
        "win": "2.2074",
        "android": "2.2074",
        "mac": "2.2074",
        "ios": "2.2074"
    },
    "id": "cheeseworks.clipboardbuttons",
    "name": "Clipboard Buttons",
    "version": "1.0.0",
    "developers": [
        "Cheeseworks"
    ],
    "description": "Add clipboard UI to every text input field.",
    "links": {
        "source": "https://github.com/BlueWitherer/ClipboardButtons",
        "homepage": "https://www.cheeseworks.gay/",
        "community": "https://www.dsc.gg/cubic"
    },
    "issues": {
        "info": "Report any issues to my repository!",
        "url": "https://www.github.com/BlueWitherer/ClipboardButtons/issues/"
    },
    "tags": [
        "offline",
        "enhancement",
        "universal"
    ],
    "resources": {
        "spritesheets": {
            "CB_ui": [
                "resources/*.png"
            ]
        }
    },
    "dependencies": {
        "geode.node-ids": {
            "importance": "required",
            "version": ">=1.21.0"
        }
    },
    "settings": {
        "disable-editor": {
            "type": "bool",
            "name": "Disable in Editor",
            "description": "Hide clipboard buttons from text fields while working in the level editor.",
            "default": true
        },
        "accessibility": {
            "type": "title",
            "name": "Accessibility",
            "description": "Features to improve accessibility."
        },
        "rtl": {
            "type": "bool",
            "name": "Right to Left",
            "description": "Apply the clipboard node anchored to the right-hand side of the text field expanding towards the left=hand side.",
            "default": true
        },
        "ui": {
            "type": "title",
            "name": "Interface",
            "description": "Appearance and functionality of the interface."
        },
        "btn-scale": {
            "type": "float",
            "name": "Button Scale",
            "description": "Re-scale the clipboard buttons that appear on text fields.",
            "default": 1.0,
            "min": 0.125,
            "max": 5.0,
            "control": {
                "input": true,
                "slider": true,
                "slider-step": 0.125,
                "arrows": true,
                "arrow-step": 0.5,
                "big-arrows": true,
                "big-arrow-step": 1.0
            }
        },
        "btn-opacity": {
            "type": "int",
            "name": "Button Opacity",
            "description": "Adjust the opacity of the clipboard buttons that appear on text fields.",
            "default": 150,
            "min": 1,
            "max": 255,
            "control": {
                "input": true,
                "slider": true,
                "slider-step": 1,
                "arrows": true,
                "arrow-step": 25,
                "big-arrows": true,
                "big-arrow-step": 100
            }
        }
    },
    "early-load": false
}