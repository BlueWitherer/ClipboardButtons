{
    "geode": "4.10.0",
    "gd": {
        "win": "2.2074",
        "android": "2.2074",
        "mac": "2.2074",
        "ios": "2.2074"
    },
    "id": "cheeseworks.clipboardbuttons",
    "name": "Clipboard Buttons",
    "version": "1.0.2",
    "developers": [
        "Cheeseworks"
    ],
    "description": "Add clipboard UI to every text input field.",
    "links": {
        "source": "https://github.com/BlueWitherer/ClipboardButtons",
        "homepage": "https://www.cheeseworks.gay/",
        "community": "https://www.dsc.gg/cubic"
    },
    "issues": {
        "info": "Report any issues to my repository!",
        "url": "https://www.github.com/BlueWitherer/ClipboardButtons/issues/"
    },
    "tags": [
        "offline",
        "enhancement",
        "universal"
    ],
    "resources": {
        "spritesheets": {
            "CB_ui": [
                "resources/*.png"
            ]
        }
    },
    "dependencies": {
        "geode.node-ids": {
            "importance": "required",
            "version": ">=1.21.0"
        }
    },
    "settings": {
        "disable-editor": {
            "type": "bool",
            "name": "Disable in Editor",
            "description": "Hide clipboard buttons from text input fields while working in the level editor.",
            "default": {
                "win": true,
                "mac": true,
                "android": false,
                "ios": false
            }
        },
        "ui": {
            "type": "title",
            "name": "Interface",
            "description": "Appearance and functionality of the interface."
        },
        "btn-always": {
            "type": "bool",
            "name": "Always Show",
            "description": "Show clipboard UI on every text input field without having to focus on it first.",
            "default": {
                "win": false,
                "mac": false,
                "android": true,
                "ios": true
            }
        },
        "btn-paste-space": {
            "type": "bool",
            "name": "Paste with Space",
            "description": "Add a space at the end when pasting text. <co>This will first trim any extra space found at the end of the copied text.</c>",
            "default": {
                "win": false,
                "mac": false,
                "android": true,
                "ios": true
            }
        },
        "btn-scale": {
            "type": "float",
            "name": "Button Scale",
            "description": "Re-scale the clipboard buttons that appear on text input fields.",
            "default": 1.0,
            "min": 0.125,
            "max": 5.0,
            "control": {
                "input": true,
                "slider": true,
                "slider-step": 0.125,
                "arrows": true,
                "arrow-step": 0.5,
                "big-arrows": true,
                "big-arrow-step": 1.0
            }
        },
        "btn-opacity": {
            "type": "int",
            "name": "Button Opacity",
            "description": "Adjust the opacity of the clipboard UI that appear on text input fields.",
            "default": 150,
            "min": 1,
            "max": 255,
            "control": {
                "input": true,
                "slider": true,
                "slider-step": 1,
                "arrows": true,
                "arrow-step": 25,
                "big-arrows": true,
                "big-arrow-step": 100
            }
        }
    },
    "early-load": false
}